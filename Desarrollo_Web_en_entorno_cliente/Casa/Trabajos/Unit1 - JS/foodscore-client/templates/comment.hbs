<div>
    <a href="profile.html?id={{id}}">
        <img class="rounded-circle me-3" style="width: 40px;" src="{{avatar}}" alt="">
    </a>
</div>
<div>
    <div>
        <strong>
            <a href="profile.html?id={{id}}">
            {{name}} 
            </a>:
        </strong>
        {{text}}
    </div>
    <div>
        {{#each fullStars}}
            <span>★</span>
        {{/each}}
        {{#each emptyStars}}
            <span>☆</span>
        {{/each}}
    </div>
    <div>
        <small>{{date}}</small>
    </div>
</div>